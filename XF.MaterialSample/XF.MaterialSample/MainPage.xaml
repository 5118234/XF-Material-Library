<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XF.MaterialSample.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:XF.MaterialSample"
    xmlns:material="clr-namespace:XF.Material.Views;assembly=XF.Material"
    Title="Xamarin.Forms Material"
    ios:Page.UseSafeArea="True">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ColorConverter x:Key="Converter.Color" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Padding="16"
            HorizontalOptions="FillAndExpand"
            Spacing="16"
            VerticalOptions="FillAndExpand">
            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="COLOR RESOURCES" />
            <StackLayout Spacing="16">
                <Grid ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource Material.Color.Primary}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Primary_Tapped" />
                        </StackLayout.GestureRecognizers>
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Primary"
                            TextColor="{DynamicResource Material.Color.OnPrimary}"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding Primary, Converter={StaticResource Converter.Color}}"
                            TextColor="{DynamicResource Material.Color.OnPrimary}" />
                    </StackLayout>
                    <StackLayout Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="{DynamicResource Material.Color.PrimaryVariant}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Primary Variant"
                            TextColor="{DynamicResource Material.Color.OnPrimary}"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding PrimaryVariant, Converter={StaticResource Converter.Color}}"
                            TextColor="{DynamicResource Material.Color.OnPrimary}" />
                    </StackLayout>
                    <StackLayout Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource Material.Color.Secondary}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Secondary"
                            TextColor="{DynamicResource Material.Color.OnSecondary}"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding Secondary, Converter={StaticResource Converter.Color}}"
                            TextColor="{DynamicResource Material.Color.OnSecondary}" />
                    </StackLayout>
                    <StackLayout Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="{DynamicResource Material.Color.SecondaryVariant}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Secondary Variant"
                            TextColor="{DynamicResource Material.Color.OnSecondary}"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding SecondaryVariant, Converter={StaticResource Converter.Color}}"
                            TextColor="{DynamicResource Material.Color.OnSecondary}" />
                    </StackLayout>
                </Grid>
                <Grid ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource Material.Color.Background}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Background"
                            TextColor="Black"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding Background, Converter={StaticResource Converter.Color}}"
                            TextColor="Black" />
                    </StackLayout>
                    <BoxView Grid.Row="0"
                        Grid.Column="1"
                        Color="Transparent" />
                    <StackLayout Grid.Row="0"
                        Grid.Column="2"
                        BackgroundColor="{DynamicResource Material.Color.Surface}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Surface"
                            TextColor="Black"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding Surface, Converter={StaticResource Converter.Color}}"
                            TextColor="Black" />
                    </StackLayout>
                    <StackLayout Grid.Row="0"
                        Grid.Column="3"
                        BackgroundColor="{DynamicResource Material.Color.Error}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="Error"
                            TextColor="White"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding Error, Converter={StaticResource Converter.Color}}"
                            TextColor="White" />
                    </StackLayout>
                </Grid>
                <Grid ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource Material.Color.OnPrimary}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="On Primary"
                            TextColor="Black"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding OnPrimary, Converter={StaticResource Converter.Color}}"
                            TextColor="Black" />
                    </StackLayout>
                    <BoxView Grid.Row="0"
                        Grid.Column="1"
                        Color="Transparent" />
                    <StackLayout Grid.Row="0"
                        Grid.Column="2"
                        BackgroundColor="{DynamicResource Material.Color.OnSecondary}">
                        <Label Margin="8,8,0,0"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="On Secondary"
                            TextColor="Black"
                            VerticalOptions="FillAndExpand" />
                        <Label Margin="8,0,0,8"
                            BindingContext="{StaticResource Material.Color}"
                            Style="{StaticResource Material.Font.Caption}"
                            Text="{Binding OnSecondary, Converter={StaticResource Converter.Color}}"
                            TextColor="Black" />
                    </StackLayout>
                    <Grid Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        ColumnSpacing="0"
                        RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="{DynamicResource Material.Color.OnBackground}">
                            <Label Margin="8,8,0,0"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="On Background"
                                TextColor="White"
                                VerticalOptions="FillAndExpand" />
                            <Label Margin="8,0,0,8"
                                BindingContext="{StaticResource Material.Color}"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="{Binding OnBackground, Converter={StaticResource Converter.Color}}"
                                TextColor="White" />
                        </StackLayout>
                        <BoxView Grid.Row="0"
                            Grid.Column="1"
                            Color="Transparent" />
                        <StackLayout Grid.Row="0"
                            Grid.Column="2"
                            BackgroundColor="{DynamicResource Material.Color.OnSurface}">
                            <Label Margin="8,8,0,0"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="On Surface"
                                TextColor="White"
                                VerticalOptions="FillAndExpand" />
                            <Label Margin="8,0,0,8"
                                BindingContext="{StaticResource Material.Color}"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="{Binding OnSurface, Converter={StaticResource Converter.Color}}"
                                TextColor="White" />
                        </StackLayout>
                        <StackLayout Grid.Row="0"
                            Grid.Column="3"
                            BackgroundColor="{DynamicResource Material.Color.OnError}"
                            Spacing="0">
                            <BoxView BackgroundColor="#EAEAEA"
                                HeightRequest="1"
                                HorizontalOptions="FillAndExpand" />
                            <Label Margin="8,7,0,0"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="On Error"
                                TextColor="Black"
                                VerticalOptions="FillAndExpand" />
                            <Label Margin="8,0,0,8"
                                BindingContext="{StaticResource Material.Color}"
                                Style="{StaticResource Material.Font.Caption}"
                                Text="{Binding OnError, Converter={StaticResource Converter.Color}}"
                                TextColor="Black" />
                        </StackLayout>
                    </Grid>
                </Grid>
            </StackLayout>

            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="CARDS" />
            <StackLayout HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                Spacing="8">
                <material:MaterialCard CornerRadius="2"
                    Elevation="1"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 1"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard CornerRadius="2"
                    Elevation="2"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 2"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard CornerRadius="2"
                    Elevation="4"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 4"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard CornerRadius="2"
                    Elevation="6"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 6"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard CornerRadius="2"
                    Elevation="8"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 8"
                        VerticalOptions="Center" />
                </material:MaterialCard>
            </StackLayout>

            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="BUTTONS" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56" />
                    <RowDefinition Height="56" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <material:MaterialButton Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Text="Button"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="0"
                    Grid.Column="1"
                    ButtonType="Flat"
                    HorizontalOptions="Center"
                    Text="Button"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="1"
                    Grid.Column="0"
                    ButtonType="Outlined"
                    HorizontalOptions="Center"
                    Text="Button"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="1"
                    Grid.Column="1"
                    ButtonType="Text"
                    HorizontalOptions="Center"
                    Text="Button"
                    VerticalOptions="Center" />
            </Grid>
            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="CHIPS" />
            <StackLayout Padding="8"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Spacing="4">
                <material:MaterialChip BackgroundColor="Blue"
                    Text="I am a Chip"
                    TextColor="White" />
                <material:MaterialChip BackgroundColor="#F2F2F2"
                    Image="im_google"
                    Text="Google"
                    TextColor="#DE000000" />
                <material:MaterialChip ActionImage="ic_close"
                    ActionImageTapped="MaterialChip_ActionImageTapped"
                    BackgroundColor="Green"
                    Text="Close me"
                    TextColor="White" />
            </StackLayout>
            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="DIALOGS AND SNACKBARS" />
            <StackLayout Orientation="Vertical" Spacing="4">
                <material:MaterialButton Clicked="MaterialButton_ShowDialog"
                    HorizontalOptions="Center"
                    Text="Show Dialog" />
                <material:MaterialButton Clicked="MaterialButton_ShowLoadingDialog"
                    HorizontalOptions="Center"
                    Text="Show Loading Dialog" />
                <material:MaterialButton Clicked="MaterialButton_ShowSnackbar"
                    HorizontalOptions="Center"
                    Text="Show Snackbar" />
                <material:MaterialButton Clicked="MaterialButton_ShowLoadingSnackbar"
                    HorizontalOptions="Center"
                    Text="Show Loading Snackbar" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
