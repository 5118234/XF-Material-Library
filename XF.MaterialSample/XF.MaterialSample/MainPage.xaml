<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XF.MaterialSample.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:and="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    xmlns:material="clr-namespace:XF.Material.Views;assembly=XF.Material"
    xmlns:mtrlfx="clr-namespace:XF.Material.Effects;assembly=XF.Material"
    Title="Xamarin.Forms Material"
    BackgroundColor="White">
    <ScrollView>
        <StackLayout Padding="16"
            HorizontalOptions="FillAndExpand"
            Spacing="16"
            VerticalOptions="FillAndExpand">

            <Label Font="18, Bold" Text="CARDS" />
            <StackLayout HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                Spacing="8">
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="1"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 1"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="2"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 2"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="4"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 4"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="6"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 6"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="8"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 8"
                        VerticalOptions="Center" />
                </material:MaterialCard>
            </StackLayout>

            <Label Font="18, Bold" Text="BUTTONS" />
            <StackLayout HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Spacing="8">
                <material:MaterialButton BackgroundColor="White"
                    Text="Ok"
                    TextColor="Black" />
                <material:MaterialButton BackgroundColor="Green"
                    Text="Save"
                    TextColor="White" />
                <material:MaterialButton BackgroundColor="#6200EE"
                    Text="Discard"
                    TextColor="White" />
            </StackLayout>
            <Label Font="18, Bold" Text="CHIPS" />
            <StackLayout Padding="8"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Spacing="4">
                <material:MaterialChip BackgroundColor="Blue"
                    Text="I am a Chip"
                    TextColor="White" />
                <material:MaterialChip BackgroundColor="#F2F2F2"
                    Image="im_google"
                    Text="Google"
                    TextColor="#DE000000" />
                <material:MaterialChip ActionImage="ic_close"
                    ActionImageTapped="MaterialChip_ActionImageTapped"
                    BackgroundColor="Green"
                    Text="Close me"
                    TextColor="White" />
            </StackLayout>
            <Label Font="18, Bold" Text="DIALOGS" />
            <StackLayout HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Spacing="4"
                VerticalOptions="Start">
                <material:MaterialButton Clicked="MaterialButton_ShowDialog" Text="Show Dialog" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
