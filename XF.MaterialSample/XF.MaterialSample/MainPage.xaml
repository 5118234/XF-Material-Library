<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XF.MaterialSample.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:XF.Material.Views;assembly=XF.Material"
    Title="Xamarin.Forms Material">
    <ScrollView>
        <StackLayout Padding="16"
            HorizontalOptions="FillAndExpand"
            Spacing="16"
            VerticalOptions="FillAndExpand">

            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="CARDS" />
            <StackLayout HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                Spacing="8">
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="1"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 1"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="2"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 2"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="4"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 4"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="6"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 6"
                        VerticalOptions="Center" />
                </material:MaterialCard>
                <material:MaterialCard BackgroundColor="#FAFAFA"
                    CornerRadius="2"
                    Elevation="8"
                    HeightRequest="80"
                    HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Center"
                        Text="Elevation 8"
                        VerticalOptions="Center" />
                </material:MaterialCard>
            </StackLayout>

            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="BUTTONS" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56" />
                    <RowDefinition Height="56" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <material:MaterialButton Grid.Row="0"
                    Grid.Column="0"
                    BackgroundColor="#E0E0E0"
                    HorizontalOptions="Center"
                    Text="Button"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="#6200EE"
                    HorizontalOptions="Center"
                    Text="Button"
                    TextColor="White"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="Green"
                    HorizontalOptions="Center"
                    IsEnabled="False"
                    Text="Button"
                    TextColor="White"
                    VerticalOptions="Center" />
                <material:MaterialButton Grid.Row="1"
                    Grid.Column="1"
                    BackgroundColor="#B00020"
                    HorizontalOptions="Center"
                    Image="ic_close"
                    Text="Button"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="CHIPS" />
            <StackLayout Padding="8"
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Spacing="4">
                <material:MaterialChip BackgroundColor="Blue"
                    Text="I am a Chip"
                    TextColor="White" />
                <material:MaterialChip BackgroundColor="#F2F2F2"
                    Image="im_google"
                    Text="Google"
                    TextColor="#DE000000" />
                <material:MaterialChip ActionImage="ic_close"
                    ActionImageTapped="MaterialChip_ActionImageTapped"
                    BackgroundColor="Green"
                    Text="Close me"
                    TextColor="White" />
            </StackLayout>
            <Label Style="{StaticResource Material.Font.Subtitle2}" Text="DIALOGS AND SNACKBARS" />
            <StackLayout Orientation="Vertical" Spacing="4">
                <material:MaterialButton Clicked="MaterialButton_ShowDialog"
                    HorizontalOptions="Center"
                    Text="Show Dialog" />
                <material:MaterialButton Clicked="MaterialButton_ShowLoadingDialog"
                    HorizontalOptions="Center"
                    Text="Show Loading Dialog" />
                <material:MaterialButton Clicked="MaterialButton_ShowSnackbar"
                    HorizontalOptions="Center"
                    Text="Show Snackbar" />
                <material:MaterialButton Clicked="MaterialButton_ShowLoadingSnackbar"
                    HorizontalOptions="Center"
                    Text="Show Loading Snackbar" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
