    <ListView BackgroundColor="Transparent"
        HasUnevenRows="True"
        ItemsSource="{Binding Models}"
        SelectionMode="None"
        SeparatorVisibility="None">
        <ListView.Header>
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                <material:MaterialMenu Choices="{Binding ListActions}"
                    Command="{Binding ListMenuCommand}"
                    HorizontalOptions="Start"
                    Source="ic_overflow"
                    TintColor="#AE000000"
                    VerticalOptions="Center" />
                <Label HorizontalOptions="Center"
                    Style="{DynamicResource Material.TypeScale.H6}"
                    Text="Job Positions"
                    TextColor="Black"
                    VerticalOptions="FillAndExpand"
                    VerticalTextAlignment="Center" />
            </StackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <material:MaterialCard Margin="0,4" Padding="16,8,0,8">
                        <View.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.JobSelectedCommand}"
                                CommandParameter="{Binding Id}"
                                NumberOfTapsRequired="1" />
                        </View.GestureRecognizers>
                        <StackLayout HeightRequest="80" Orientation="Horizontal">
                            <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                <Label Style="{DynamicResource Material.TypeScale.Body1}"
                                    Text="{Binding Title}"
                                    TextColor="Black"
                                    VerticalOptions="FillAndExpand"
                                    VerticalTextAlignment="Center" />
                                <material:MaterialCard Padding="8,2"
                                    BackgroundColor="#2c3e50"
                                    CornerRadius="2"
                                    Elevation="1"
                                    IsVisible="{Binding IsNew}"
                                    VerticalOptions="Center">
                                    <Label Style="{DynamicResource Material.TypeScale.Overline}"
                                        Text="NEW"
                                        TextColor="#DEFFFFFF" />
                                </material:MaterialCard>
                            </StackLayout>

                            <material:MaterialMenu Choices="{Binding Source={x:Reference Root}, Path=BindingContext.Actions}"
                                Command="{Binding Source={x:Reference Root}, Path=BindingContext.MenuCommand}"
                                CommandParameter="{Binding Title}"
                                HorizontalOptions="End"
                                Source="ic_overflow"
                                TintColor="#AEAEAE"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </material:MaterialCard>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

