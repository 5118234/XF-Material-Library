    <ScrollView VerticalOptions="FillAndExpand">
        <material:MaterialCard Elevation="4"
            HorizontalOptions="FillAndExpand"
            IsClippedToBounds="False"
            VerticalOptions="FillAndExpand">
            <StackLayout Spacing="8">
                <Label Margin="0,0,0,16"
                    Style="{DynamicResource Material.TypeScale.H5}"
                    Text="Create an account"
                    TextColor="#DE000000" />
                <material:MaterialTextField AlwaysShowUnderline="True"
                    ChoiceDisplayBinding="{Binding AS}"
                    HelperText="*Required"
                    InputType="Choice"
                    Placeholder="Username"
                    TintColor="#2c3e50">
                    <material:MaterialTextField.Choices>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Add</x:String>
                            <x:String>Edit</x:String>
                            <x:String>Delete</x:String>
                            <x:String>Save</x:String>
                            <x:String>Undo</x:String>
                            <x:String>Redo</x:String>
                        </x:Array>
                    </material:MaterialTextField.Choices>
                </material:MaterialTextField>
                <material:MaterialTextField AlwaysShowUnderline="True"
                    BackgroundColor="Transparent"
                    FocusCommand="{Binding EmailFocusCommand}"
                    HasError="{Binding EmailHasError}"
                    HelperText="*Required"
                    InputType="Email"
                    Placeholder="Email Address"
                    Text="{Binding Email}"
                    TintColor="#2c3e50" />
                <material:MaterialTextField AlwaysShowUnderline="True"
                    BackgroundColor="Transparent"
                    HelperText="*Required"
                    InputType="Password"
                    MaxLength="8"
                    Placeholder="Password"
                    TintColor="#2c3e50" />
                <material:MaterialTextField AlwaysShowUnderline="True"
                    BackgroundColor="Transparent"
                    HelperText="*Required"
                    InputType="Password"
                    MaxLength="8"
                    Placeholder="Confirm Password"
                    TintColor="#2c3e50" />
                <material:MaterialIconButton HorizontalOptions="Start"
                    Image="ic_overflow"
                    TintColor="Gray" />
                <material:MaterialCheckbox Margin="-8,0,0,0"
                    SelectedColor="#2c3e50"
                    Text="I agree with the terms and service." />
                <material:MaterialRadioButtonGroup>
                    <material:MaterialRadioButtonGroup.Choices>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Add</x:String>
                            <x:String>Edit</x:String>
                            <x:String>Delete</x:String>
                            <x:String>Save</x:String>
                            <x:String>Undo</x:String>
                            <x:String>Redo</x:String>
                        </x:Array>
                    </material:MaterialRadioButtonGroup.Choices>
                </material:MaterialRadioButtonGroup>
                <material:MaterialButton BackgroundColor="#2c3e50"
                    HorizontalOptions="End"
                    Text="Create" />
            </StackLayout>
        </material:MaterialCard>
    </ScrollView>


