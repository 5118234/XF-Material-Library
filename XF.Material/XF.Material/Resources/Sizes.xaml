<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="XF.Material.Resources.Sizes"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <OnPlatform x:Key="Chip.Height"
        x:TypeArguments="x:Double"
        Default="32" />

    <OnPlatform x:Key="Chip.Label.Margin.NoActionImage"
        x:TypeArguments="Thickness"
        Default="12, 0, 12, 0" />

    <OnPlatform x:Key="Chip.Label.Margin.WithActionImage"
        x:TypeArguments="Thickness"
        Default="12, 0, 0, 0" />

    <OnPlatform x:Key="Chip.ActionImage.Margin"
        x:TypeArguments="Thickness"
        Default="8, 0, 8, 0" />

</ResourceDictionary>